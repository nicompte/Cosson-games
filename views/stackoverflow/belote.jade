#belote
  div(data-bind="foreach: hand")
    button(data-bind="click: $parent.play, enable: $parent.belote.canPlay")
      span(data-bind="text: value.shortLabel")
      span(data-bind="text: family.shortLabel")

  <!-- ko if: belote().potentialTrick() -->

  button(data-bind="with: belote, click: function(){setTrick(belote().potentialTrick().value.id)}, enable: belote().canChooseTrick(), visible: belote().canChooseTrick() || belote().canChooseAnyTrick()")
    span(data-bind="text: potentialTrick().value.shortLabel")
    span(data-bind="text: potentialTrick().family.shortLabel")

  button(data-bind="click: pass, visible: belote().canChooseTrick() || belote().canChooseAnyTrick()") P

  button(data-bind="click: function(){setTrick(0)}, visible: belote().canChooseAnyTrick()") C
  button(data-bind="click: function(){setTrick(1)}, visible: belote().canChooseAnyTrick()") Ca
  button(data-bind="click: function(){setTrick(2)}, visible: belote().canChooseAnyTrick()") P
  button(data-bind="click: function(){setTrick(3)}, visible: belote().canChooseAnyTrick()") T

  <!-- /ko -->
